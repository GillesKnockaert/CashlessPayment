<Window x:Class="CashlessPayment.AddEditRegister"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kassa toevoegen/bewerken" Height="200" Width="360">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>

        </Grid.RowDefinitions>
        <Label Content="Naam: " Margin="8,8,8,8"/>
        <TextBox Grid.ColumnSpan="2" Grid.Column="1" Margin="8,8,8,8"/>
        <Label Content="Toestel: " Margin="8,8,8,8" Grid.Row="1"/>
        <TextBox Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="1" Margin="8,8,8,8"/>
        <Label Content="Locatie: " Margin="8,8,8,8" Grid.Row="2"/>
        <TextBox Grid.ColumnSpan="2" Grid.Column="1" Margin="8,8,8,8" Grid.Row="2"/>
        <Button Content="OK" Grid.Column="1" Margin="8,8,8,8" Grid.Row="3"/>
        <Button Content="Annuleer" Grid.Column="2" Margin="8,8,8,8" Grid.Row="3"/>
    </Grid>
</Window>
